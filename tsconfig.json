{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "images/*": ["public/images/*"],
      "audio/*": ["public/audio/*"],
      "@hooks/*": ["src/app/hooks/*"],
      "@store/*": ["src/store/*"],
      "@lib/*": ["src/lib/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],

      "@comedy-tragedy/*": ["src/app/comedy-tragedy/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/store/AppStoreProvider.jsx",
    "src/store/AppStore.jsx"
  ],
  "exclude": ["node_modules"]
}
